<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <!--match_parent: 가득 채우기(부모 레이아웃 기준)-->
    <!--wrap_content: 글자에 맞는 크기-->
    <!--vertical속성값 : 세로-->

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"

        android:gravity="center"
        android:text="Street Painter"
        android:textSize="40dp"
        />

    <ImageView
        android:id="@+id/main"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:id="@+id/imagePlain"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:id="@+id/imageMonet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/imagePlain"
        />

    <ImageButton
        android:id="@+id/imageVanGogh"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/imageMonet"
        />

    <ImageButton
        android:id="@+id/imageCezanne"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/imageVanGogh"
        />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>